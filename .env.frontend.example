# Frontend Environment Variables (.env)
# Copy this to Renthub/.env and fill in your values

# ====================================
# Backend API Configuration
# ====================================
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# ====================================
# Application Settings
# ====================================
VITE_APP_NAME=RentHub
VITE_APP_ENV=local                     # local, staging, production
VITE_APP_DEBUG=true                    # Set to false in production

# ====================================
# Authentication Configuration
# ====================================
VITE_SANCTUM_STATEFUL_DOMAINS=localhost:5173,127.0.0.1:5173
VITE_SESSION_DRIVER=cookie

# ====================================
# URLs
# ====================================
VITE_FRONTEND_URL=http://localhost:5173
VITE_BACKEND_URL=http://localhost:8000

# ====================================
# API Endpoints
# ====================================
VITE_LOGIN_URL=/api/v1/auth/login
VITE_LOGOUT_URL=/api/v1/auth/logout
VITE_REGISTER_URL=/api/v1/auth/register
VITE_USER_URL=/api/v1/auth/user
VITE_CSRF_COOKIE_URL=/sanctum/csrf-cookie

# ====================================
# Feature Flags
# ====================================
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AR_TOURS=false
VITE_ENABLE_SMART_HOME=false

# ====================================
# Third-Party Services
# ====================================

# Google Maps API (for location features)
VITE_GOOGLE_MAPS_API_KEY=

# Google Analytics
VITE_GA_MEASUREMENT_ID=

# Sentry (Error Tracking)
VITE_SENTRY_DSN=

# Stripe (Payment Processing)
VITE_STRIPE_PUBLISHABLE_KEY=

# ====================================
# UI Configuration
# ====================================
VITE_DEFAULT_LANGUAGE=en               # en, ro
VITE_DEFAULT_CURRENCY=USD              # USD, EUR, RON
VITE_ITEMS_PER_PAGE=12

# ====================================
# Image Configuration
# ====================================
VITE_MAX_IMAGE_SIZE=5242880           # 5MB in bytes
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# ====================================
# Development Settings
# ====================================
VITE_PORT=5173
VITE_HOST=localhost

# ====================================
# Production Settings (Override above)
# ====================================

# For production, use these values:
# VITE_API_BASE_URL=https://api.yourdomain.com
# VITE_APP_ENV=production
# VITE_APP_DEBUG=false
# VITE_FRONTEND_URL=https://yourdomain.com
# VITE_BACKEND_URL=https://api.yourdomain.com
# VITE_SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com

# ====================================
# Staging Settings (Override above)
# ====================================

# For staging, use these values:
# VITE_API_BASE_URL=https://staging-api.yourdomain.com
# VITE_APP_ENV=staging
# VITE_APP_DEBUG=true
# VITE_FRONTEND_URL=https://staging.yourdomain.com
# VITE_BACKEND_URL=https://staging-api.yourdomain.com
