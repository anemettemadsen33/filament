# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default indent to 4 spaces
[*.{php,py,java,c,cpp,h,hpp}]
indent_style = space
indent_size = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# HTML files
[*.{html,blade.php}]
indent_style = space
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
