<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         stopOnFailure="false"
         failOnRisky="true"
         failOnWarning="true"
>
    <!-- Define test suites -->
    <testsuites>
        <!-- Unit tests - test individual components in isolation -->
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        
        <!-- Feature tests - test complete features and user flows -->
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>

    <!-- Code coverage configuration -->
    <coverage processUncoveredFiles="true">
        <include>
            <!-- Include app directory for coverage -->
            <directory suffix=".php">app</directory>
        </include>
        
        <exclude>
            <!-- Exclude these paths from coverage -->
            <directory>app/Console</directory>
            <directory>app/Exceptions</directory>
            <file>app/Providers/RouteServiceProvider.php</file>
        </exclude>
        
        <!-- Coverage report output directory -->
        <report>
            <html outputDirectory="./reports/coverage" lowUpperBound="50" highLowerBound="80"/>
            <clover outputFile="./reports/coverage/clover.xml"/>
            <xml outputDirectory="./reports/coverage/xml"/>
        </report>
    </coverage>

    <!-- PHP environment settings for testing -->
    <php>
        <!-- Application environment -->
        <env name="APP_ENV" value="testing"/>
        <env name="APP_KEY" value="base64:TEST_KEY_FOR_PHPUNIT_TESTING_ONLY"/>
        <env name="APP_DEBUG" value="true"/>
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        
        <!-- Encryption -->
        <env name="BCRYPT_ROUNDS" value="4"/>
        
        <!-- Cache and Session -->
        <env name="CACHE_STORE" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        
        <!-- Database - use in-memory SQLite for fast tests -->
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
        
        <!-- Queue -->
        <env name="QUEUE_CONNECTION" value="sync"/>
        
        <!-- Mail -->
        <env name="MAIL_MAILER" value="array"/>
        
        <!-- Broadcasting -->
        <env name="BROADCAST_CONNECTION" value="null"/>
        
        <!-- Telescope, Pulse, and other dev tools -->
        <env name="PULSE_ENABLED" value="false"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="NIGHTWATCH_ENABLED" value="false"/>
        
        <!-- Logging -->
        <env name="LOG_CHANNEL" value="null"/>
    </php>
</phpunit>
