# Backend Environment Variables (.env)
# Copy this to Rental-Platform-main/backend/.env and fill in your values

# ====================================
# Application Settings
# ====================================
APP_NAME="Rental Platform"
APP_ENV=local                          # local, staging, production
APP_KEY=                               # Generate with: php artisan key:generate
APP_DEBUG=true                         # Set to false in production
APP_URL=http://localhost:8000

# ====================================
# Frontend Configuration
# ====================================
FRONTEND_URL=http://localhost:5173
SANCTUM_STATEFUL_DOMAINS=localhost:5173,127.0.0.1:5173

# ====================================
# Database Configuration
# ====================================
DB_CONNECTION=pgsql                    # mysql or pgsql
DB_HOST=localhost
DB_PORT=5432                           # 5432 for PostgreSQL, 3306 for MySQL
DB_DATABASE=rental_platform
DB_USERNAME=postgres
DB_PASSWORD=your-secure-password

# ====================================
# Session & Cache
# ====================================
SESSION_DRIVER=database                # file, database, redis, cookie
SESSION_LIFETIME=120
SESSION_DOMAIN=localhost

CACHE_DRIVER=file                      # file, database, redis, memcached
CACHE_PREFIX=rental_

# ====================================
# Queue Configuration
# ====================================
QUEUE_CONNECTION=database              # sync, database, redis, sqs
QUEUE_FAILED_DRIVER=database-uuids

# ====================================
# Mail Configuration
# ====================================
MAIL_MAILER=smtp                       # smtp, ses, mailgun, postmark, log
MAIL_HOST=smtp.mailtrap.io            # Change for production
MAIL_PORT=2525
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_ENCRYPTION=tls                    # tls, ssl, or null
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# ====================================
# File Storage
# ====================================
FILESYSTEM_DISK=public                 # local, public, s3

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ====================================
# Filament Admin Panel
# ====================================
FILAMENT_ADMIN_DOMAIN=admin.yourdomain.com  # Optional

# ====================================
# Logging
# ====================================
LOG_CHANNEL=stack                      # single, daily, slack, syslog, errorlog
LOG_LEVEL=debug                        # debug, info, notice, warning, error

# ====================================
# Redis (Optional - for cache/queue)
# ====================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# ====================================
# Broadcasting (Optional)
# ====================================
BROADCAST_DRIVER=log                   # pusher, redis, log, null

# ====================================
# Search (Meilisearch - Optional)
# ====================================
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_KEY=

# ====================================
# Third-Party Services (Optional)
# ====================================

# Sentry (Error Tracking)
SENTRY_LARAVEL_DSN=

# Google Analytics
GOOGLE_ANALYTICS_ID=

# Stripe (Payment Processing)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# Twilio (SMS Notifications)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ====================================
# Security Settings
# ====================================

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=60

# CORS Configuration (handled by config/cors.php)
# Additional origins can be set there

# ====================================
# Production Settings (Override above)
# ====================================

# For production, use these values:
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://api.yourdomain.com
# FRONTEND_URL=https://yourdomain.com
# SESSION_DOMAIN=.yourdomain.com
# SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com
# DB_CONNECTION=pgsql
# CACHE_DRIVER=redis
# QUEUE_CONNECTION=database
# SESSION_DRIVER=database
# FILESYSTEM_DISK=s3
# MAIL_MAILER=smtp (with production SMTP)
# LOG_CHANNEL=daily
