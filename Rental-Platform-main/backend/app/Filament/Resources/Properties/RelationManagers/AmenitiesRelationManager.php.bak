<?php

namespace App\Filament\Resources\Properties\RelationManagers;

use Filament\Forms\Components\Select;
use Filament\Forms\Form;
use Filament\Resources\RelationManagers\RelationManager;
use Filament\Tables;
use Filament\Tables\Table;
use Filament\Tables\Columns\TextColumn;
use Filament\Tables\Actions\EditAction;
use Filament\Tables\Actions\AttachAction;
use Filament\Tables\Actions\DetachAction;
use Filament\Tables\Actions\DetachBulkAction;

class AmenitiesRelationManager extends RelationManager
{
    protected static string $relationship = 'amenities';
    protected static ?string $title = 'Amenities';

    public function form(Form $form): Form
    {
        return $form
            ->schema([
                Select::make('amenities')
                    ->multiple()
                    ->relationship('amenities','name')
                    ->searchable()
                    ->preload()
                    ->label('Amenities')
                    ->required(),
            ]);
    }

    public function table(Table $table): Table
    {
        return $table
            ->columns([
                TextColumn::make('name')->label('Amenity')->searchable(),
                TextColumn::make('created_at')->dateTime()->since(),
            ])
            ->headerActions([
                EditAction::make()->label('Manage'),
                AttachAction::make(),
            ])
            ->actions([
                DetachAction::make(),
            ])
            ->bulkActions([
                DetachBulkAction::make(),
            ]);
    }
}
